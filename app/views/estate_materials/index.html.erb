<p id="notice"><%= notice %></p>

<h1><%= t('views.estate_material.index.title') %></h1>

<%= link_to t('views.estate_material.index.new'), new_estate_material_path %>

<table>
  <thead>
    <tr>
      <th><%= EstateMaterial.human_attribute_name(:id) %></th>
      <th><%= EstateMaterial.human_attribute_name(:name) %></th>
      <th><%= EstateMaterial.human_attribute_name(:created_at) %></th>
      <th><%= EstateMaterial.human_attribute_name(:updated_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estate_materials.each do |estate_material| %>
      <tr>
        <td><%= estate_material.id %></td>
        <td><%= estate_material.name %></td>
        <td><%= estate_material.created_at %></td>
        <td><%= estate_material.updated_at %></td>
        <td><%= link_to t('views.show'), estate_material %></td>
        <td><%= link_to t('views.edit'), edit_estate_material_path(estate_material) %></td>
        <td><%= link_to t('views.destroy'), estate_material, method: :delete, data: { confirm: t('views.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
