<p id="notice"><%= notice %></p>

<h1>Streets in <%= @city.name %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @city.street.each do |street| %>
      <tr>
        <td><%= street.name %></td>
        <td><%= link_to 'Show', city_street_path(@city, street) %></td>
        <td><%= link_to 'Edit', edit_city_street_path(@city, street) %></td>
        <td><%= link_to 'Destroy', city_street_path(@city, street), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Street', new_city_street_path(@city) %>
