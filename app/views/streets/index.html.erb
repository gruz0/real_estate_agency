<p id="notice"><%= notice %></p>

<h1><%= t('views.street.index.title', city: @city.name) %></h1>

<%= link_to t('views.street.index.new'), new_city_street_path(@city) %>

<table>
  <thead>
    <tr>
      <th><%= Street.human_attribute_name(:id) %></th>
      <th><%= Street.human_attribute_name(:name) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @city.street.each do |street| %>
      <tr>
        <td><%= street.name %></td>
        <td><%= link_to t('views.show'), city_street_path(@city, street) %></td>
        <td><%= link_to t('views.edit'), edit_city_street_path(@city, street) %></td>
        <td><%= link_to t('views.destroy'), city_street_path(@city, street), method: :delete, data: { confirm: t('views.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
